
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<h2 class="text-center my-3">Chat</h2>
<div class="d-flex flex-column">
    <div class="col-12 col-md-9 mx-auto card">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    @if (ViewBag.MensajesDetalles != null)
                    {
                        <div class="text-center mb-3">
                            <h3>Numero destinatario: @ViewBag.destinatario</h3>
                        </div>
                        <div>
                            @foreach (var Mensajes in (List<Parcial3Movil.Models.DetalleMensaje>)ViewBag.MensajesDetalles)

                            {
                                if (Mensajes.Remitente != ViewBag.destinatario)
                                {
                                    <div class="d-flex justify-content-end ">
                                        <div class="py-2 px-4 mb-2 bg-info rounded-pill">
                                            <span class="text-end text-white fs-5">@Mensajes.MensajeDescripcion</span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-start">
                                        <div class="mb-2 py-2 px-4 bg-primary rounded-pill">
                                            <span class="text-start text-white fs-5">@Mensajes.MensajeDescripcion</span>
                                        </div>
                                    </div>
                                }

                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card-footer form-group">
            <p class="text-danger" style="margin: 3px 0 3px 0;">@ViewBag.Error2</p>
            <div class="d-flex justify-content-center">
                <form action="@Url.Content("~/MensajeChat/MandarMensaje")" method="post">
                    <div class="d-flex mb-2">
                        <input type="text" class="form-control form-control-lg" name="mensaje" autocomplete="off" required />
                    </div>
                    <div class="d-flex justify-content-around ">
                        <input type="submit" value="Enviar" class="btn btn-success" style="width: 82px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


