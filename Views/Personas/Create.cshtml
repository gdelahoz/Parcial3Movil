        @Html.LabelFor(model => model.idRol, "Tipo de usuario", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idRol", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idRol, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex">
        <div>
            @Html.ActionLink("Regresar", "Index", "Personas", new { @class = "btn btn-outline-success" })
        </div>
        <div class="ms-3">
            <input type="submit" value="Registrar" class="btn btn-success" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
