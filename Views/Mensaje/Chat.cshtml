
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<h2 class="my-3">Mensaje</h2>

<div class="row">
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <form action="@Url.Content("~/Mensaje/IniciarChat")" method="post">
        <div class="form-group">
            <label>Mis telefonos</label><br />
            @Html.DropDownList("misTelefonos", null, htmlAttributes: new { @class = "form-control", @Name = "Telefono1" })

            <br />
            <label>Contactos</label><br />
            @Html.DropDownList("misContactos", null, htmlAttributes: new { @class = "form-control", @Name = "Telefono2" })

        </div><br />
        <div class="form-group">
            <input type="submit" value="Iniciar chat" class="btn btn-success me-2" />
            <a href="~/Home/Index" class="btn btn-danger">Cancelar</a>
        </div>

    </form>
</div>

